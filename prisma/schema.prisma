generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}



model User {
  id               String   @id @default(cuid())
  email            String   @unique
  name             String?
  image            String?
  stripeCustomerId String?  // optional
  subscriptionId   String?  // optional
  subscriptionEnd  DateTime?
  chats            Chat[]
  createdAt        DateTime @default(now())
}

model Chat {
  id        String     @id @default(cuid())
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade) // Hab ein onDelete hinzugefügt, gute Praxis
  userId    String
  title     String
  model     String     @default("gpt-4o") // Ein Default ist hier sinnvoll
  modelLevel String    @default("simple") // <--- DAS IST DIE WICHTIGE ZEILE
  messages  Message[]
  usage     Usage[]
  createdAt DateTime   @default(now())
}

model Message {
  id        String   @id @default(cuid())
  chat      Chat     @relation(fields: [chatId], references: [id])
  chatId    String
  role      String
  content   String
  model     String?
  createdAt DateTime @default(now())
}

model Usage {
  id           String   @id @default(cuid())
  chat         Chat     @relation(fields: [chatId], references: [id])
  chatId       String
  messageId    String?
  inputTokens  Int?
  outputTokens Int?
  costUsd      Float?
  provider     String?
  createdAt    DateTime @default(now())
}


